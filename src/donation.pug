			// card
			a.color-card.color-card--red.section-donation__card(href="#")
				p.color-card__title История донорства
				img.color-card__img(src="./images/donation/img1.png", alt="")
				span.button.button--icon-only.button--transparent-white.color-card__btn
					+svg("arrow-right").button__icon
			// card
			a.color-card.color-card--violet.section-donation__card(href="#")
				p.color-card__title Любопытные факты
