extends pug/base

prepend styles
	link(rel="stylesheet" href=`./lib/swiper/swiper-bundle.css`)
prepend scripts
	script(src=`./lib/swiper/swiper-bundle.min.js`)

block content
	+breadcrumb(["Главная"], "О Донорстве") 
	// Section Donation
	.section-donation.container
		h1.section-donation__title.h1 О Донорстве
