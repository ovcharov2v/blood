include mixins

block vars
	-
		var baseDir = './'


doctype html(lang="ru")
html
	head
		block head-start
		block meta
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible' content='IE=edge')
			meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
			meta(name='description' content='Mav Auto')
			title Служба крови
			link(rel='icon' type='image/png' href='favicon-32x32.png' sizes='32x32')
			link(rel='icon' type='image/png' href='favicon-16x16.png' sizes='16x16')
		block styles
			link(rel="stylesheet" href!=`${baseDir}libs/swiper/swiper-bundle.css`)
			link(rel="stylesheet" href!=`${baseDir}css/main.css?v=${Date.now()}`)
		block head-end
	body
		block body-start
		.page
			+header()
			+mobileMenu()
			main.main
				block content
			+footer()
		block scripts
			script(src!=`${baseDir}libs/swiper/swiper-bundle.min.js`)
			script(src!=`${baseDir}libs/imask/imask.min.js`)
			//-script(src!=`${baseDir}js/vendor.js?v=${Date.now()}`)
			script(src!=`${baseDir}js/main.js?v=${Date.now()}`)
		include ../images/sprite/sprite.svg
		block body-end
