mixin footer()
	// Footer
	footer.footer
		.footer__container.container
			// Footer top
			.footer__top
				.footer__logo-box
					a.footer__logo-link(href="./main.html", title="На главную")
						picture
							img.footer__logo.img-theme-light(src="./images/common/logo-theme-light.svg", alt="Служба Крови")
							img.footer__logo.img-theme-dark(src="./images/common/logo-theme-dark.svg", alt="Служба Крови")
					.footer__btn-box
						a.button.button--with-icon.button--round-corner.button--red.footer__btn(href="./lk.html")
							+svg("user").button__icon
							| Кабинет донора
						a.button.button--with-icon.button--round-corner.button--outline-red.footer__btn(href="./lk.html")
							+svg("bold-plus").button__icon.button__icon--color-red
							| Кабинет врача
					.footer__phone-wrap
						.footer__phone-box
							span.footer__phone-description Горячая линия (бесплатно по РФ)
							a.footer__phone-link(href="tel:88003333343") 8 (800) 333-33-43
						.footer__phone-box
							span.footer__phone-description Техническая поддержка ЕИБД
							a.footer__phone-link(href="tel:88007007606") 8 (800) 700-76-06
					ul.footer__social-list.footer__social-list--desktop.social-list
						li.social-list__el
							a.social-list__link.social-list__link--max(href="#", target="_blank", title="Max")
								+svg("social-max").social-list__icon
						li.social-list__el
							a.social-list__link.social-list__link--telegram(href="#", target="_blank", title="Telegram")
								+svg("social-telegram").social-list__icon
						li.social-list__el
							a.social-list__link.social-list__link--vk(href="#", target="_blank", title="Вконтакте")
								+svg("social-vk").social-list__icon
						li.social-list__el
							a.social-list__link.social-list__link--ok(href="#", target="_blank", title="Одноклассники")
								+svg("social-ok").social-list__icon
				.footer__nav-box
					.footer__nav
						// Col
						.footer__nav-col
							p.footer__nav-title Я донор
								+svg("chevron-down").footer__nav-title-arrow
							ul.footer__nav-list
								li.footer__nav-elem
									a.footer__nav-link(href="#") Стать донором
								li.footer__nav-elem
									a.footer__nav-link(href="#") О донорстве
								li.footer__nav-elem
									a.footer__nav-link(href="#") Бонусы и привилегии
								li.footer__nav-elem
									a.footer__nav-link(href="#") О службе крови
								li.footer__nav-elem
									a.footer__nav-link(href="#") Часто задаваемые вопросы FAQ
								li.footer__nav-elem
									a.footer__nav-link(href="#") Донорство костного мозга
						// Col
						.footer__nav-col
							p.footer__nav-title Я врач
								+svg("chevron-down").footer__nav-title-arrow
							ul.footer__nav-list
								li.footer__nav-elem
									a.footer__nav-link(href="#") Портал единой информационной базы данных доноров
						// Col
						.footer__nav-col
							p.footer__nav-title Я партнёр
								+svg("chevron-down").footer__nav-title-arrow
							ul.footer__nav-list
								li.footer__nav-elem
									a.footer__nav-link(href="#") Организация выездной акции
								li.footer__nav-elem
									a.footer__nav-link(href="#") Коммерческие организации
								li.footer__nav-elem
									a.footer__nav-link(href="#") Некоммерческие организации
								li.footer__nav-elem
									a.footer__nav-link(href="#") Студенты
								li.footer__nav-elem
									a.footer__nav-link(href="#") Экскурсии/Школьники
								li.footer__nav-elem
									a.footer__nav-link(href="#") СМИ
								li.footer__nav-elem
									a.footer__nav-link(href="#") Материалы для скачивания
					// Footer apps
					.footer__apps
						.footer__apps-content-box
							p.footer__apps-title Скачайте наше
								br
								|приложение
							.footer__apps-links
								a.button.button--outline-white.button--round-corner(href="#", target="_blank") Скачать на Android
								a.button.button--outline-white.button--round-corner(href="#", target="_blank") Скачать на iOS
						.footer__apps-img-box
							picture
								img.footer__apps-img.img-theme-light(src="./images/common/phone-theme-light.svg", alt="")
								img.footer__apps-img.img-theme-dark(src="./images/common/phone-theme-dark.svg", alt="")
					.footer__btn-box.footer__btn-box--mobile
						a.button.button--round-corner.button--outline-red.footer__btn(href="#", target="_blank") Скачать на Android
						a.button.button--round-corner.button--outline-red.footer__btn(href="#", target="_blank") Скачать на iOS
				ul.footer__social-list.footer__social-list--mobile.social-list
					li.social-list__el
						a.social-list__link.social-list__link--max(href="#", target="_blank", title="Max")
							+svg("social-max").social-list__icon
					li.social-list__el
						a.social-list__link.social-list__link--telegram(href="#", target="_blank", title="Telegram")
							+svg("social-telegram").social-list__icon
					li.social-list__el
						a.social-list__link.social-list__link--vk(href="#", target="_blank", title="Вконтакте")
							+svg("social-vk").social-list__icon
					li.social-list__el
						a.social-list__link.social-list__link--ok(href="#", target="_blank", title="Одноклассники")
							+svg("social-ok").social-list__icon
			// Footer bottom
			.footer__bottom
				.footer__copyright-box
					ul.footer__link-list
						li.footer__link-elem
							a.footer__link(href="#", target="_blank", title="Служба крови")
								img.footer__link-img(src="./images/common/logo-blood.svg", alt="Служба крови")
						li.footer__link-elem
							a.footer__link(href="#", target="_blank", title="ФМБА")
								img.footer__link-img(src="./images/common/logo-fmba.svg", alt="ФМБА")
					p.footer__copyright © 2025 ФМБА России. Все права на материалы, находящиеся на сайте, охраняются в соответствии с законодательством РФ, в том числе об авторском праве и смежных правах.
				ul.footer__terms-list
					li.footer__terms-el
						a.footer__terms-link(href="#", target="_blank") Политика в отношении обработки персональных данных
					li.footer__terms-el
						a.footer__terms-link(href="#", target="_blank") Политика использования сookie-файлов
					li.footer__terms-el
						a.footer__terms-link(href="#", target="_blank") Согласие на обработку персональных данных